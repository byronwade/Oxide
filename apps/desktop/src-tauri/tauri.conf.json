{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "productName": "LaunchBeacon",
  "version": "0.1.0",
  "identifier": "com.launchbeacon.app",
  "build": {
    "beforeDevCommand": "bun run dev",
    "beforeBuildCommand": "bun run build",
    "devUrl": "http://localhost:3000",
    "frontendDist": "../out"
  },
  "app": {
    "macOSPrivateApi": true,
    "windows": [
      {
        "title": "LaunchBeacon",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "decorations": false,
        "transparent": false,
        "alwaysOnTop": false,
        "center": true,
        "skipTaskbar": false,
        "shadow": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "publisher": "LaunchBeacon Team",
    "copyright": "Copyright Â© 2025 LaunchBeacon",
    "category": "Game",
    "shortDescription": "Next-gen game launcher and platform",
    "longDescription": "A next-gen platform built to dethrone Steam and itch.io by being faster, more developer-friendly, gamer-focused, and completely open."
  },
  "plugins": {
    "window": {
      "all": true
    },
    "shell": {
      "open": true,
      "scope": [
        {
          "name": "open-game",
          "cmd": "*",
          "args": true
        }
      ]
    }
  }
} 