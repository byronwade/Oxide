{
  "name": "launchbeacon",
  "version": "0.1.0",
  "private": true,
  "description": "A next-gen platform built to dethrone Steam and itch.io by being faster, more developer-friendly, gamer-focused, and completely open.",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "clean": "turbo clean",
    "type-check": "turbo type-check",
    "dev:web": "turbo dev --filter=web",
    "dev:desktop": "cd apps/desktop && cargo tauri dev",
    "build:web": "turbo build --filter=web",
    "build:desktop": "cd apps/desktop && cargo tauri build",
    "db:push": "turbo db:push",
    "db:seed": "turbo db:seed",
    "db:studio": "turbo db:studio"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@faker-js/faker": "^9.8.0",
    "@types/node": "^20",
    "eslint": "^9",
    "turbo": "^2.3.0",
    "typescript": "^5"
  },
  "packageManager": "bun@1.1.38",
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.1.0"
  },
  "dependencies": {
    "@tauri-apps/api": "^2.6.0",
    "tailwindcss-animate": "^1.0.7"
  }
}
